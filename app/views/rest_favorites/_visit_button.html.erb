<!-- Unvisitボタン -->
<% if restaurant.id.present? and @visited_codes.include?(restaurant.code) %>

  <%= form_tag(rest_favorite_path(RestFavorite.find_by(restaurant_id: restaurant.id)), method: :delete) do %>
    <%= hidden_field_tag :rest_id, restaurant.code %>
    <%= hidden_field_tag :type, 'Visit' %>
    <%= submit_tag '行ったを外す', class: 'btn btn-success' %>
  <% end %>
  
<% elsif @visited_codes.include?(restaurant.code) %>

  <%= form_tag(rest_favorite_path(RestFavorite.find_by(restaurant_id: Restaurant.find_by(code: restaurant.code).id)), method: :delete) do %>
    <%= hidden_field_tag :rest_id, restaurant.code %>
    <%= hidden_field_tag :type, 'Visit' %>
    <%= submit_tag '行ったを外す', class: 'btn btn-success' %>
  <% end %>
<% else %>

<!-- Visitボタン -->
  <%= form_tag(rest_favorites_path) do %>
    <%= hidden_field_tag :rest_id, restaurant[:code] %>
    <%= hidden_field_tag :type, 'Visit' %>
    <%= submit_tag '行った', class: 'btn btn-primary' %>
  <% end %>
<% end %>